{
  "manifest_version": 3,
  "name": "Inline Translate (On-page Bubble)",
  "version": "0.2.1",
  "description": "Select text and see an inline translation bubble. Source can be Auto or fixed. Target is user choice. Uses Chrome's on-device AI.",
  "icons": { "128": "icons/icon128.png" },

  "permissions": ["storage", "contextMenus", "activeTab"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "Inline Translate â€” open settings"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["translator.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "commands": {
    "retranslate-last-selection": {
      "suggested_key": {
        "default": "Alt+Shift+T",
        "mac": "Alt+Shift+T",
        "linux": "Alt+Shift+T",
        "chromeos": "Alt+Shift+T"
      },
      "description": "Re-translate the last selection"
    }
  }
}
