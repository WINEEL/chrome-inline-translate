{
  "manifest_version": 3,
  "name": "Inline Translate (On-page Bubble)",
  "version": "0.3.1",
  "description": "Select text and see an inline translation bubble using Chrome Built-in AI (on-device).",
  "icons": {
  "16": "icons/icon16.png",
  "32": "icons/icon32.png",
  "48": "icons/icon48.png",
  "128": "icons/icon128.png"
},

  "permissions": ["storage", "contextMenus", "activeTab"],

  "background": { "service_worker": "background.js" },

  "action": {
    "default_title": "Inline Translate â€” quick controls",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end",
      "all_frames": true,
      "match_about_blank": true
    }
  ],

  "web_accessible_resources": [
    { "resources": ["translator.js"], "matches": ["<all_urls>"] }
  ],

  "commands": {
    "retranslate-last-selection": {
      "suggested_key": { "default": "Alt+Shift+T" },
      "description": "Re-translate the last selection"
    }
  }
}
